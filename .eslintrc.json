{
  "extends": ["next/core-web-vitals", "prettier"],
  "plugins": ["testing-library"],
  "ignorePatterns": ["scripts/**"],
  "rules": {
    "no-console": ["error", {"allow": ["info", "warn", "error"]}],
    "react-hooks/exhaustive-deps": "error"
  },
  "overrides": [
    {
      "files": [
        "**/__tests__/**/*.[jt]s?(x)",
        "**/?(*.)+(spec|test).[jt]s?(x)"
      ],
      "extends": ["plugin:testing-library/react"]
    }
  ]
}
